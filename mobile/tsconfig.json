{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "lib": ["ESNext"],
      "jsx": "react-native",
      "moduleResolution": "NodeNext",
      "allowJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "noEmit": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }
  